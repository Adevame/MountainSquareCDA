{% extends 'base.html.twig' %}


{% block title %}Connexion !{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="message-alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <div class="form-login">
            <h1 class="h3 mb-3 font-weight-normal">Connecte-toi !</h1>
            <label for="username">Email :</label>
            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
            <label for="password">Mot de passe :</label>
            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="btn-connexion btn-lg btn-primary" type="submit" id="confetti"> Connexion</button>
        </div>
    </form>
{% endblock %}
