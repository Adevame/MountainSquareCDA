{% extends 'base.html.twig' %}

{% block title %}
	Jour temporaire
{% endblock %}

{% block body %}
	<h2 style="margin: 10vh auto 0; justify-content: center;">Jours</h2>
	<section
		style="display: flex; flex-direction: column; flex-wrap: wrap; align-items: center; height: 100vh;">
		{# Il faudra remplacer les boucles for ET supprimer les set quand les cruds seront finis / commencés #}
		{% set k = 5 %}
		{% for i in range(1, k) %}
			<div style="display: flex; gap: 5%; margin: 0 auto; justify-content: center; padding: 2.5vh 0;">
				<h3 style="align-self: center;">Scene</h3>
				{% set j = 3 %}
				{% for i in range(1, j) %}
					<div class="card" style="width: 25vw; flex-direction: row; height: 6rem;">
						<img src="{{ asset('media/placeholder.jpg') }}" class="card-img-top" alt="placeholderForPerformer" style="width: 7.5vw; height: 5.5rem; align-self: center;">
						<div class="card-body" style="width: 15vw; padding: 0 10px 0 10px; display: grid;grid-template-columns: repeat(2, 1fr); grid-template-rows: repeat(2, 1fr); grid-column-gap: 0px;grid-row-gap: 0px;">
							<h5 class="card-title" style="max-width: fit-content; 1 / 1 / 2 / 2; margin-bottom: 0;">Performer</h5>
							<p class="card-text" style="max-width: fit-content; max-height: fit-content; grid-area: 1 / 2 / 2 / 3; margin-bottom: 0;">Passage: Date
								<br>
								Heure</p>
							<input type="button" value="Détails" class="btn btn-dark" id="modalOn" style=" max-height: max-content; grid-area: 2 / 1 / 3 / 3; align-self: center;">
							{% include "modal/modal.html.twig" %}
						</div>
					</div>
				{% endfor %}
			</div>
		{% endfor %}
	</section>
{% endblock %}
